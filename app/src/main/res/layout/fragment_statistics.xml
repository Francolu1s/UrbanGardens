                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </TableRow>
        <!-- Row 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
