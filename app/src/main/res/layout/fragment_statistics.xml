        </TableRow>
        <!-- Row 6 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mesh"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
